{
    "name": "schmunk42/php-bcx-api",
    "description": "Modern PHP client for Basecamp Classic (BCX) API",
    "type": "library",
    "license": "MIT",
    "keywords": ["basecamp", "bcx", "api", "client", "oauth"],
    "authors": [
        {
            "name": "Tobias Munk",
            "email": "schmunk@usrbin.de"
        }
    ],
    "require": {
        "php": "^8.4",
        "symfony/http-client": "^7.0",
        "symfony/http-client-contracts": "^3.0",
        "psr/http-client": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "symfony/var-dumper": "^7.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Schmunk42\\BasecampApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schmunk42\\BasecampApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyse src tests --level=8"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
